{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "GameScript",
  "scopeName": "source.gs",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#constants" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.gs",
          "match": "#.*$"
        },
        {
          "name": "comment.line.double-slash.gs",
          "match": "//.*$"
        },
        {
          "name": "comment.block.gs",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.gs",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.gs",
              "match": "\\\\[ntr\\\\\"]"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.gs",
          "match": "\\b\\d+(?:\\.\\d+)?\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.gs",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.gs",
          "match": "\\bnull\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.gs",
          "match": "\\b(fn|class|extends|let|for|in|if|elif|else|while|break|continue|return|spawn|await|sleep|yield|import|from|as)\\b"
        },
        {
          "name": "keyword.operator.logical.gs",
          "match": "\\b(is|not|and|or)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.gs",
          "match": "\\b(str|type|id|print|printf)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.gs",
          "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.gs",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.gs",
          "match": "&&|\\|\\|"
        },
        {
          "name": "keyword.operator.bitwise.gs",
          "match": "&|\\||\\^|~|<<|>>"
        },
        {
          "name": "keyword.operator.arithmetic.gs",
          "match": "\\*\\*|//|\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.assignment.gs",
          "match": "="
        },
        {
          "name": "keyword.operator.accessor.gs",
          "match": "\\."
        }
      ]
    }
  }
}
